 <section class="top-container">
    <h1 class="container">Update Trip</h1>
</section>

<div class="container">
    {{>messages}}
</div>

<form action="/update/{{trip._id}}" method="POST" enctype="multipart/form-data" class="container form-container">
    <input type="hidden" name="_id" value="{{trip._id}}">

    <div class="form-flex">
        <label for="title">Title</label>
        <input 
            type="text"
            id="title"
            name="title" 
            placeholder="Enter Title",
            value="{{trip.title}}" 
        />
    </div>

    <div class="form-flex">
        <label for="description">Description</label>
        <input 
            type="text"
            id="description"
            name="description" 
            placeholder="Enter Description",
            value="{{trip.description}}" 
        />
    </div>
        
    <div class="form-flex">
        <label for="description">Location</label>
        <input 
            type="text"
            id="location"
            name="location" 
            placeholder="Enter Location",
            value="{{trip.location}}" 
        />
    </div>

    <div>
        <label for="continent">Select Type of Trip Experiences</label>
        <div class="input-flex">
            <input type="checkbox" id="nature" name="nature" class="regular-checkbox nature" value="{{trip.nature}}" {{checkedContinent nature true}}/> 
            <input type="checkbox" id="urban" name="urban" class="regular-checkbox urban" value="{{trip.urban}}" {{checkedContinent urban true}}/>  
            <input type="checkbox" id="adventure" name="adventure" class="regular-checkbox adventure" value="{{trip.adventure}}" {{checkedContinent adventure true}}/>  
            <input type="checkbox" id="culture" name="culture" class="regular-checkbox culture" value="{{trip.culture}}" {{checkedContinent culture true}}/>  
        </div>
    </div>

    <div>
        <label for="continent">Select Continent</label>
        <div class="input-flex input-flex-continent">
            <input type="radio" id="europe" name="continent" value="Europe" class="regular-checkbox europe" {{checkedContinent currentContinent 'Europe'}}/>
            <input type="radio" id="asia" name="continent" value="Asia" class="regular-checkbox asia" {{checkedContinent currentContinent 'Asia'}}/>
            <input type="radio" id="oceania" name="continent" value="Oceania" class="regular-checkbox oceania" {{checkedContinent currentContinent 'Oceania'}}/>
            <input type="radio" id="africa" name="continent" value="Africa" class="regular-checkbox africa"{{checkedContinent currentContinent 'Africa'}}/>
            <input type="radio" id="northAmerica" name="continent" value="North America" class="regular-checkbox north-america" {{checkedContinent currentContinent 'North America'}}/>
            <input type="radio" id="southAmerica" name="continent" value="South America" class="regular-checkbox south-america" {{checkedContinent currentContinent 'South America'}}/>
        </div>
    </div>   
        

    <div class="form-flex">
        <h6> Trip Image </h6>
        <label for="tripImage" class="uploadImg" id="updateImgLabel">Upload Image </label>
        <input 
            type="file" accept="image/png, image/jpg, image/jpeg"
            id="tripImage"
            name="tripImage" 
            placeholder="Upload Trip Image"
            value=""
            style="display:none;"
        />
    </div>
    
    <button type="submit">Update Trip</button>
</form> 

{{>nav}}

