<section class="login-flex">
    <div class="login-div">
        <h1>Travigo</h1>
        <h3>Register</h3>
    </div>

    <div class="container container-login">
        {{>messages}}
        <form action="/register" method="POST" enctype="application/json">
            <div class="form-flex">
                <label for="name">Name</label>
                <input 
                    type="text"
                    id="name"
                    name="name" 
                    placeholder="Enter Name",
                    value="{{name}}" 
                />
            </div>

            <div class="form-flex">
                <label for="name">Username</label>
                <input 
                    type="text"
                    id="username"
                    name="username" 
                    placeholder="Enter Username",
                    value="{{username}}" 
                />
            </div>

            <div class="form-flex">
                <label for="password">Password</label>
                <input 
                    type="password"
                    id="password"
                    name="password"
                    placeholder="Enter Password",
                    value="{{password}}"
                />
            </div>

            <div class="form-flex">
                <label for="password2">Confirm Password</label>
                <input 
                    type="password"
                    id="password2"
                    name="password2"
                    placeholder="Confirm Password",
                    value="{{password2}}"
                />
            </div>

            <button type="submit">button</button>
        </form> 

        <p>Already have an account? <a href="/" class="register-a"> Login here</a></p> 
    </div>
</section>
