<section class="top-container">
    <h1 class="container">Create a new trip!</h1>
</section>

{{>messages}}
<form action="/createTrip" method="POST" enctype="multipart/form-data" class="container form-container">
    <input type="hidden" name="_id" value="{{trip._id}}">

    <div class="form-flex">
        <label for="title">Title</label>
        <input 
            type="text"
            id="title"
            name="title" 
            placeholder="Enter Title",
            value="{{trip.title}}" 
        />
    </div>

    <div class="form-flex">
        <label for="description">Description</label>
        <input 
            type="text"
            id="description"
            name="description" 
            placeholder="Enter Description",
            value="{{trip.description}}" 
        />
    </div>
        
    <div class="form-flex">
        <label for="description">Location</label>
        <input 
            type="text"
            id="location"
            name="location" 
            placeholder="Enter Location",
            value="{{trip.location}}" 
        />

    </div>

    <div>
        <label for="continent">Select Type of Trip Experiences</label>
        <div class="input-flex">
            <input type="checkbox" id="nature" name="nature" class="regular-checkbox nature"/> 
            <input type="checkbox" id="urban" name="urban" class="regular-checkbox urban"/>  
            <input type="checkbox" id="adventure" name="adventure" class="regular-checkbox adventure"/>  
            <input type="checkbox" id="culture" name="culture" class="regular-checkbox culture"/>  
        </div>
    </div>

    <div>
        <label for="continent">Select Continent</label>
        <div class="input-flex input-flex-continent">
            <input type="radio" id="europe" name="continent" value="Europe" class="regular-checkbox europe"/>
            <input type="radio" id="northAmerica" name="continent" value="North America" class="regular-checkbox north-america"/>
            <input type="radio" id="southAmerica" name="continent" value="South America" class="regular-checkbox south-america"/>
            <input type="radio" id="asia" name="continent" value="Asia" class="regular-checkbox asia"/>
            <input type="radio" id="oceania" name="continent" value="Oceania" class="regular-checkbox oceania"/>
            <input type="radio" id="africa" name="continent" value="Africa" class="regular-checkbox africa"/>
        </div>
    </div>   
        
    <div class="form-flex">
        <h6> Trip Image </h6>
        <label for="tripImage" class="uploadImg" id="tripImgLabel">Trip Image</label>
        <input 
            type="file" accept="image/png, image/jpg"
            id="tripImage"
            name="tripImage" 
            class="tripImgInput"
            placeholder="Upload Trip Image"
            value="" 
            style="display:none;"
        />
    </div>

    <button type="submit">Create Trip</button>

</form> 

{{>nav}}